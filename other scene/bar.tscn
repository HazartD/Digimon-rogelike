[sub_resource type="GDScript" id="GDScript_tn57c"]
script/source = "extends TextureProgressBar
#si al final configuro mas cosas lo dejare como escena, de lo contrario sacare el script y se los pondre
const TYPE:PackedStringArray=[\"life\",\"energy\",\"hunger\"]
const C:String=\"current_\"
@export_enum(\"l\",\"e\",\"h\") var type:int=0
@onready var label=$Label
@onready var core:DigimonCORE=get_parent().get_parent().get_parent().get_parent().get_parent()
func _ready()->void:
	max_value=core.get(\"max_\"+TYPE[type])
	value=core.get(C+TYPE[type])
	label.text=str(value)+\" / \"+str(max_value)
	match type:
		0:self_modulate=Color(1,0,0)
		2:self_modulate=Color(0,1,0)
		_:self_modulate=Color(0,0,1)
func update()->void:
	value=core.get(C+TYPE[type])
	label.text=str(value)+\"/\"+str(max_value)
func _process(_delta)->void:update()
"

